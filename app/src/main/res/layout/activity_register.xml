<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F0D9"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/register_layout_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_button">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/register_textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon_milk_bold"
                android:gravity="center"
                android:text="Register"
                android:textSize="50sp"
                android:textColor="#70AD47"
                android:shadowColor="#B3000000"
                android:shadowRadius="10.0"
                android:shadowDx="10.0"
                android:shadowDy="10.0"
                android:padding="5dp"
                android:layout_marginVertical="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/register_textview_1"
                app:layout_constraintBottom_toTopOf="@+id/register_textview_4">

                <TextView
                    android:id="@+id/register_textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon_milk_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#B3000000"
                    android:shadowDx="10.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="10.0"
                    android:text="1"
                    android:textColor="#70AD47"
                    android:textSize="90sp"
                    app:layout_constraintEnd_toEndOf="@+id/register_textview_3"
                    app:layout_constraintStart_toStartOf="@+id/register_textview_3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/register_textview_3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon_milk_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#B3000000"
                    android:shadowDx="10.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="10.0"
                    android:text="Person"
                    android:textColor="#70AD47"
                    android:textSize="35sp"
                    android:translationY="-15dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@id/register_down_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_textview_2" />

                <TextView
                    android:id="@+id/register_up_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon_milk_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#B3000000"
                    android:shadowDx="10.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="10.0"
                    android:text="▲"
                    android:textColor="#70AD47"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toTopOf="@id/register_down_arrow"
                    app:layout_constraintEnd_toEndOf="@+id/register_down_arrow"
                    app:layout_constraintStart_toStartOf="@+id/register_down_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/register_down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon_milk_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#B3000000"
                    android:shadowDx="10.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="10.0"
                    android:text="▼"
                    android:textColor="#70AD47"
                    android:textSize="50sp"
                    android:translationY="-20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/register_textview_3"
                    app:layout_constraintTop_toBottomOf="@id/register_up_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/register_textview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon_milk_bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:shadowColor="#B3000000"
                android:shadowDx="10.0"
                android:shadowDy="10.0"
                android:shadowRadius="10.0"
                android:text="student number"
                android:textColor="#70AD47"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/register_linear_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_layout_1" />

            <LinearLayout
                android:id="@+id/register_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_textview_4">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pin_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:hint="e.g. 20200212"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_text_input_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxStrokeColor="#70AD47"
                    app:boxStrokeErrorColor="#70AD47"
                    app:boxStrokeWidth="3dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="#70AD47"
                    android:textColorHint="#70AD47">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lemon_milk_medium"
                        android:textSize="20sp"
                        android:inputType="numberDecimal"
                        android:textColor="#70AD47"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:fontFamily="@font/lemon_milk_medium"
        android:gravity="center"
        android:text="start"
        android:textSize="30sp"
        android:letterSpacing="0"
        android:textColor="#548235"
        android:backgroundTint="#C5E0B4"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/cameraFragmentContainerView"
        android:name="com.example.pj4test.fragment.CameraFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>